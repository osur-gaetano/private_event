<div class="form">
    <h1> New Event </h1>
    <%= form_with model: @event do |form| %>
    
        <div>
            <%= form.label :title %>
            <%= form.text_field :title%>
        </div>
    
        <div>
            <%= form.label :about %>
            <%= form.text_area :about %>
        </div>
    
        <div>
            <%= form.label :location %>
            <%= form.text_field :location%>
        </div>
    
        <div>
            <%= form.label :event_date %>
            <%= form.date_field :event_date%>
        </div>
    
        <div>
            <%= form.submit %>
        </div>
    
    <% end %>
    
    <%= link_to 'Back to Events', events_path %>
    
</div>
